{
  "id": null,
  "title": "Business Metrics Dashboard",
  "tags": [
    "business-metrics",
    "transaction-api",
    "tech-test"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Transaction Submissions Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(transaction_submissions_total{job=\"tech-test-app\"}[5m])",
          "legendFormat": "Submissions/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Transaction Retrievals Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(transaction_retrievals_total{job=\"tech-test-app\"}[5m])",
